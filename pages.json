		"selectedColor": "#BBBBBB",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index3",
			"iconPath": "static/images/index.png",
			"selectedIconPath": "static/images/index-active.png",
			"text": "首页"
		}, {
			"pagePath": "pages/index/index2",
